{
  "manifest_version": 3,
  "name": "AtCoder Copy Button",
  "version": "1.0",
  "description": "Add a copy button to AtCoder problem pages",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://atcoder.jp/contests/*/tasks/*"],
      "js": ["content.js"]
    }
  ]
}
